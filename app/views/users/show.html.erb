<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%# gravatar_for returns an image tag %>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <%# Iterating through the user's microposts and rendering
       the partial for each micropost %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts  %>
      </ol>
    <% end %>
  </div>
</div>


